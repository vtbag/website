---
import Layout from "../../layouts/Layout.astro";
import chamber from "@vtbag/inspection-chamber?url";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<Layout {title} description="A demo that let's you play with the @vtbag's Inspection Chamber" image="/chamber-og.png">
  <script slot="head" is:inline>
    sessionStorage.removeItem("vtbag-ui-standby");
  </script>
  <script is:inline src={chamber} slot="head"></script>
  <slot />
</Layout>

<style is:global>
  :root,
  body {
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  :root {
    color-scheme: dark;
    font-family: sans-serif;
    view-transition-name: none;
  }
  @view-transition {
    navigation: auto;
  }
  #back {
    display: inline-block;
    color: black;
    border-radius: 8px;
    padding: 1rem;
    margin: 1rem;
    background: linear-gradient(45deg, #ff6b6b, #f06595, #cc5de8);
    box-shadow: 0 4px 6px #8888;
  }
</style>
