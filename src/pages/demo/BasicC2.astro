---
import Demo from "@/layouts/DemoLayout.astro";
---

<Demo title="View Transition Example: Basic Cross-Document, Page 2 of 2"  backlink='/basics/examples/#basicc' prev="/demo/BasicMS/" next="/demo/BasicAC1/">
  <link rel="preload" href="/chamber.webp" as="image" slot="early-head" />
  <p>
    You now see page two of this example. Find details below.
  </p>
  <h2>My other lovely picture</h2>
  <img
    id="image"
    width="200"
    height="200"
    src="/chamber.webp"
    alt="The Inspection Chamber"
  />
  <a class="nav-button right" href="/demo/BasicC1/">Next</a>

  <style is:inline slot="late-head">
    @view-transition {
      navigation: auto;
    }
    ::view-transition-image-pair(root) {
      animation-duration: 0.75s;
    }
    .nav-button {
      position: fixed;
      transform: translateY(-150px);
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      border-radius: 5px;
    }
    .nav-button.right {
      right: 20px;
    }
    #image {
      display: block;
      margin: 0 auto;
      mask-image: radial-gradient(
        ellipse at center,
        white 35%,
        transparent 71%
      );
    }
    :active-view-transition {
      cursor: pointer;
    }
  </style>
</Demo>
