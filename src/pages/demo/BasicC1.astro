---
import Demo from "@/layouts/DemoLayout.astro";
---

<Demo
  title="View Transition Example: Basic Cross-Document, Page 1 of 2"
  backlink="/basics/examples/#basicc"
  prev="/demo/BasicMS/"
  next="/demo/BasicAC1/"
  description="Example of a basic cross-document view transition."
  image="/bag-og.png"
>
  <link rel="preload" href="/bag.webp" as="image" slot="early-head" />
  <p>
    This example uses basic cross-document view transitions. Press the blue
    [Next] button to the right halfway down the page to see the next picture.
  </p>
  <h2>My lovely picture</h2>
  <img
    id="image"
    width="200"
    height="200"
    src="/bag.webp"
    alt="The Bag of Tricks"
  />
  <a class="nav-button right" href="/demo/BasicC2/">Next</a>

  <style is:inline slot="late-head">
    @media (prefers-reduced-motion: no-preference) {
      @view-transition {
        navigation: auto;
      }
    }
    ::view-transition-image-pair(root) {
      animation-duration: 0.75s;
    }
    .nav-button {
      position: fixed;
      transform: translateY(-150px);
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      border-radius: 5px;
    }
    .nav-button.right {
      right: 20px;
    }
    #image {
      display: block;
      margin: 0 auto;
      mask-image: radial-gradient(
        ellipse at center,
        white 35%,
        transparent 71%
      );
    }
    :active-view-transition {
      cursor: pointer;
    }
  </style>
</Demo>
