---
import Demo from "@/layouts/DemoLayout.astro";
---

<Demo
  title="View Transition Example: Multiple View Transitions, Page 1 of 2"
  backlink="/basics/examples/#basicmc"
  prev="/demo/BasicAC1/"
  next="/demo/BasicIM/"
  description="Demo of a cross-document view transition with multiple animations."
  image="/bag-og.png"
>
  <link rel="preload" href="/bag.webp" as="image" slot="early-head" />
  <p>Let's add a second sliding animation.</p>
  <h2>My lovely picture</h2>
  <img
    id="image"
    width="200"
    height="200"
    src="/bag.webp"
    alt="The Bag of Tricks"
  />
  <a class="nav-button right" href="/demo/BasicMC2/">Next</a>

  <style is:inline slot="late-head">
    @view-transition {
      navigation: auto;
    }
    h2 + img {
      view-transition-name: img;
    }
    .nav-button {
      view-transition-name: nav;
    }
    ::view-transition-old(nav) {
      animation: 1s ease-in-out slideOut;
    }
    ::view-transition-new(nav) {
      animation: 1s ease-in-out slideIn;
    }
    @keyframes slideOut {
      to {
        transform: translateX(-100vw);
      }
    }
    @keyframes slideIn {
      from {
        transform: translateX(100vw);
      }
    }
    ::view-transition-group(img) {
      z-index: 1;
    }
    ::view-transition-old(img) {
      animation: 1s zoom-out forwards;
    }
    ::view-transition-new(img) {
      animation: 1s reverse zoom-out;
    }
    @keyframes zoom-out {
      40% {
        transform: scale(0.5);
        opacity: 0.5;
      }
      60% {
        transform: scale(0.5);
        opacity: 0.5;
      }
      100% {
        transform: scale(0);
        opacity: 0;
      }
    }
    .nav-button {
      position: fixed;
      transform: translateY(-120px);
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      border-radius: 5px;
    }
    .nav-button.right {
      right: 20px;
    }
    #image {
      display: block;
      margin: 0 auto;
      mask-image: radial-gradient(
        ellipse at center,
        white 35%,
        transparent 71%
      );
    }
    :active-view-transition {
      cursor: pointer;
    }
  </style>
</Demo>
